# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
USE_GCS=False

# Database
# Local Development (via cloud-sql-proxy)
DATABASE_URL=postgresql://venezuelawatch_app:PASSWORD@localhost:5432/venezuelawatch

# Production (Cloud Run) - use Secret Manager
# DATABASE_URL=secretmanager://database-url
# SECRET_KEY=secretmanager://django-secret-key
# DEBUG=False
# USE_GCS=True

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Authentication (django-allauth)
ACCOUNT_EMAIL_VERIFICATION=optional  # optional | mandatory | none
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For development
# For production: django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Celery & Redis
REDIS_URL=redis://localhost:6379/0

# GCP Secret Manager
GCP_PROJECT_ID=venezuelawatch-staging
SECRET_MANAGER_ENABLED=False  # Set to True in production

# External API Keys (Development - use environment variables)
# In production, these are stored in GCP Secret Manager
API_GDELT_KEY=  # GDELT API doesn't require authentication
API_RELIEFWEB_KEY=  # ReliefWeb API doesn't require authentication
API_FRED_KEY=your-fred-api-key-here  # Get from https://fred.stlouisfed.org/docs/api/api_key.html
API_COMTRADE_KEY=  # Optional - Get from https://comtradeplus.un.org/ (500 req/day with key vs 100/day without)

# For production (Cloud Run), use Secret Manager references:
# API_FRED_KEY=secretmanager://api-fred-key
# API_COMTRADE_KEY=secretmanager://api-comtrade-key

# LLM Configuration (LiteLLM + Claude)
ANTHROPIC_API_KEY=  # Get from https://console.anthropic.com/
OPENAI_API_KEY=  # Optional fallback - Get from https://platform.openai.com/
# For production:
# ANTHROPIC_API_KEY=secretmanager://anthropic-api-key
# OPENAI_API_KEY=secretmanager://openai-api-key

# GCP Pub/Sub (Event-driven architecture)
PUBSUB_ENABLED=False  # Set to True to enable Pub/Sub publishing
GCP_SERVICE_ACCOUNT_JSON=  # Path to service account JSON file (development)
# In production, use Application Default Credentials (ADC)
